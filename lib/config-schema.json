{
  "hideLocalWhenDisplayed": {
    "type": "boolean",
    "default": false
  },
  "autoUploadOnSave": {
    "type": "string",
    "default": "always",
    "enum": ["always", "only when connected", "never"]
  },
  "showHiddenFiles": {
    "type": "boolean",
    "default": true
  },
  "showViewOnStartup": {
    "type": "boolean",
    "default": true
  },
  "enableCopyFilename": {
    "type": "boolean",
    "default": true
  },
  "multipleHosts ( Beta )":{
    "type":"boolean",
    "default":false
  },
  "enableTransferNotifications":{
    "type":"boolean",
    "default":false
  },
  "student-token-key":{
    "type":"string",
    "default":"commit-live:token"
  },
  "student-info-key":{
    "type":"string",
    "default":"commit-live:user-info"
  },
  "websocket-endpoint":{
    "type":"string",
    "default":"https://chat.commit.live"
  },
  "ftp-config-key": {
    "type": "string",
    "default": "commit-live:ftp-config"
  },
  "ftp-ignore-config-key": {
    "type": "string",
    "default": "commit-live:ftp-ignore-config"
  },
  "detailsFileName": {
    "type": "string",
    "default": "readme.md",
    "title": "Details File Name",
    "description": "A valid file name that contains the Assignment Details"
  },
  "solutionFileName": {
    "type": "string",
    "default": "build.py",
    "title": "Solution File Name",
    "description": "A valid file name inside which the User will write Assignment solution"
  }
}
